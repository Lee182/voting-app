@import url('https://fonts.googleapis.com/css?family=Josefin+Sans')
$main_font = 'Josefin Sans', sans-serif

@require './lib/jonoreset.styl'

[v-cloak]
  display none !important
input
button
  border none
  background none
  font-size unset
body
  font-family $main_font
  font-size 1.2rem
  background-image url('https://www.subtlepatterns.com/patterns/new_year_background.png')
  width 100%
  height 100%
  //font-weight 300

.title
  padding 2rem
  display flex
  justify-content center
h1
  font-size 2em

.content
  display flex
  flex-flow row wrap
  justify-content space-around
.data
  padding 2rem
  white-space pre-wrap
  font-family 'ubuntu mono', monospace
  font-size 1rem
  code
    display inline-block
    background #ddd
    padding 1rem

.poll_create
  padding 1rem
  label
    padding-right 1rem
