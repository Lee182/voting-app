$main_font = 'Josefin Sans', sans-serif

@require './lib/jonoreset.styl'
@require './lib/base.styl'

.content
  display flex
  flex-flow row wrap
  justify-content space-between
.data
  padding 2rem
  white-space pre-wrap
  font-family 'ubuntu mono', monospace
  font-size 1rem
  code
    display inline-block
    background #ddd
    color #444
    padding 1rem
    line-height 1.5
.forms
  display flex
  flex-flow row wrap
  justify-content center
  align-items flex-start
  & > *
    margin .5rem

@require 'modules/poll_create.styl'
@require 'modules/poll.styl'

