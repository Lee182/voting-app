.toast_messages
  padding 1rem
  position fixed
  top 0
  left 0
  height 100vh
  width 100vw
  display flex
  flex-flow column-reverse
  align-items end
.toast_message
  padding .5rem
  position relative
  &_close
    position absolute
    top 0rem
    right 0rem
    font-size 1.5rem
.toast_message .neat-box
  //height 10rem
  width 20rem
  // neat box
  background rgba(255,255,255,0.9)
  padding 1rem
  border 1px solid #908e8e
  border-radius: 0.3rem
