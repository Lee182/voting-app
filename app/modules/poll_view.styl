.poll
  width 300px
  padding 0

  .question
    padding 1rem
  .heading
    border-bottom 1px solid #808080
  .settings-txt
    padding-left .5rem
  .author
    justify-self flex-end
  .author-txt
    padding-left .5rem

  .settings
    background #4d4960
    color #fefefe
    border-radius 0 0 2rem 2rem
  .options
    flex-flow column nowrap
  .results
    padding-top 1rem
    &-option
      padding-bottom 1rem
    &-count
      text-align right
      padding-left 1rem
    &-pie
      padding 0

  .resultsbar-icons
    display flex
    width 100px
    & > *
      flex 1
    i.n
      font-weight bold

  .voted-box
    position relative
    .voted
      position absolute
      top -1.2rem
      right 0
      color #9c4949
      font-weight 600
      background #fff
      padding .3rem
      border-radius 1rem
      border 3px solid #9c4949



.option-vote-send i
  margin-left .5rem

.option-vote
  &-tick-box
    width 2rem
    height 2rem
    border 1px solid grey
    color #281d9c
    position relative
  &-value
    flex 1
    padding-left .5rem
    display flex
    align-items center

.check-watermark
  opacity .05

.vote-stamp
  position absolute
  top: 0
  left 0
  height 2rem
  width 2rem
  border 3px solid #9c4949
  border-radius .7rem
