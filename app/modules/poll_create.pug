.poll_create.neat-box
  h2 Create Poll
  .row.question
    label question:
    textarea.vert(placeholder='your poll question?'  v-model='poll_create.question')
  .row.options
    label vote options:
    .input-options
      .input-option(v-for='(option, i) in poll_create.options')
        span.input-li {{ (Number(i)+1) }}.
        input(
          placeholder='option',
          :value='poll_create.options[i]',
          @input='poll_create.options[i] = $event.target.value'
        )
        button.input-option-remove.btn-text(
          v-if='i>1'
          @click='poll_create__remove_option(i)'
        ) x remove
      button.input-option.btn-text.add-option(@click='poll_create__add_option') + option
  .form--space-between
    .form-status {{poll_create.status}}
    button.form-submit.btn(type='submit' @click='poll_create__post')
      span post
      i.fa.fa-paper-plane-o(atria-hidden='true')
